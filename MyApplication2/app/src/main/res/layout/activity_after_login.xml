<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".after_login">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/after_login_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/mov_circle"
        android:layout_width="349dp"
        android:layout_height="273dp"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toTopOf="@+id/after_login_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        app:lottie_autoPlay="true"
        app:lottie_fileName="mov_circle.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAP HERE TO MATCH"
        app:layout_constraintBottom_toTopOf="@+id/after_login_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mov_circle"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:layout_width="231dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/mov_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017">

        <RadioButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:text="ALL"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="203dp" />

        <RadioButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:text="GIRL"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="203dp" />

        <RadioButton
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:text="BOY"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="203dp" />


    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>